{#
/**
 * @file
 * Template for a Secret element.
 *
 * Available variables:
 * - value: The secret value.
 *
 * @ingroup themeable
 */
#}
{{ attach_library('apigee_kickstart_enhancement/secret') }}
<div class="secret">
  <span class="secret__value">{{ value }}</span>
  <span class="secret__value__hidden">••••••••••••••••</span>

  <button class="secret__toggle">
    <i class="fas fa-eye secret__toggle__show"></i>
    <i class="fas fa-eye-slash secret__toggle__hide"></i>
  </button>

  <div class="secret__copy">
    <span class="badge badge-light">{{ "Copied"|t }}</span>
    <button class="secret__copy" data-value="{{ value }}" title="{{ "Click to copy"|t }}">
      <i class="fas fa-paste"></i>
    </button>
  </div>
</div>
