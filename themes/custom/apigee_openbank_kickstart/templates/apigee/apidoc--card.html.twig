{#
/**
 * @file
 * Default theme implementation to display an Apigee Edge Api Doc.
 *
 * Available variables:
 * - entity: The Apigee Edge Api DOc entity.
 * - content: All items. Use {{ content }} to print them all,
 * - attributes: HTML attributes for the containing element.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
  'apidoc',
  view_mode ? 'apidoc--view-mode-' ~ view_mode|clean_class,
]
%}
<article{{ attributes.addClass(classes) }}>
  {% include '@apigee-openbank-kickstart/card/card.twig' with {
    classes: ['api-card'],
    url: content.field_link['#url'],
    title: entity.label,
    image: content.field_image,
    body: content|without('name', 'field_image', 'field_link'),
    footer: content.field_link['#title'],
    hover_shadow: true
  } %}
</article>
