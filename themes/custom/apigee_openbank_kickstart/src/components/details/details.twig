{#
/**
 * @file
 * Template for a Details component.
 */
#}

{% set open = open|default(false) %}
{% set classes = [
  'details',
  'py-3',
  'pt-md-4',
  'pb-md-5',
  'px-3'
]|merge(classes|default([])) %}

<details class="{{ classes|join(' ')|trim }}"{{ open ? ' open' : '' }}>
  <summary class="details__summary pr-8">
    {{ summary }}
  </summary>
  <div class="details__content pt-4 pr-8">
    {{ content }}
  </div>
</details>
